<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.drug.finance.mapper.payReportMapper" >
	<!-- 查询付款日期、合计 -->
	<select id="getDateMoney" resultType="PayDTO">
		select pay_date,money from
		pay
		where is_show=0
	</select>
	<!-- 查询收款日期、合计 -->
	<select id="getReceiptDateMoney" resultType="ReceiptDTO">
		select
		receipt_time,receipt_money from receipt
		where is_show=0
	</select>
</mapper>
